<Page x:Class="R8Calendar.Event"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:R8Calendar"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Event">

    <StackPanel VerticalAlignment="Stretch">

        <TextBlock x:Name="EventDay"  Margin="10,10,10,0" Foreground="DimGray"  VerticalAlignment="Stretch" FlowDirection="RightToLeft" FontFamily="IRANSansWeb(FaNum) Medium" FontSize="16" />
        <TextBlock x:Name="EventText" Margin="10,10,10,0" Foreground="DarkGray" VerticalAlignment="Stretch" FlowDirection="RightToLeft" FontFamily="IRANSansWeb(FaNum) Light" />
    </StackPanel>
</Page>